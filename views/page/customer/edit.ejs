<%- include('../../partials/header') %>
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../../partials/navbar') %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">
                            <%- include('../../validate') %>

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">Edit customers
                                    <%= customer.fullname %>
                                </h1>
                                <form action="/customers/<%= customer.fullname %>/editProfile" method="POST">
                                    <input type="text" style="display: none;" value="<%= customer.id %>" name="id">
                                    <div class="form-group">
                                        <label for="identityNumber">ID Number: </label>
                                        <input type="text" class="form-control" name="identityNumber" value="<%= customer.identityNumber %>" id="identityNumber" placeholder="Enter ID Number">
                                    </div>
                                    <div class="form-group">
                                        <label for="fullname">Full Name: </label>
                                        <input type="text" class="form-control" name="fullname" value="<%= customer.fullname %>" id="fullname" placeholder="Enter Fullname">
                                    </div>
                                    <div class="form-group">
                                        <label for="address">Address: </label>
                                        <input type="text" class="form-control" name="address" value="<%= customer.address %>" id="address" placeholder="Enter Address">
                                    </div>
                                    <div class="form-group">
                                        <label for="birthDate">Birth Date: </label>
                                        <input type="date" class="form-control" name="birthDate" value="<%= formatDate(customer.birthDate) %>" id="birthDate" placeholder="Enter Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="gender">Gender: </label>

                                        <div class="form-check">
                                            <label class="form-check-label">
                                        <input type="radio" class="form-check-input" <%= (customer.gender === 'male') ? 'checked' : '' %> name="gender" value="male">Male
                                    </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                        <input type="radio" class="form-check-input" <%= (customer.gender === 'female') ? 'checked' : '' %> name="gender" value="female">Female
                                    </label>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Update</button>
                                </form>

                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../partials/footer') %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include('../../partials/scroll-to-top') %>


        <%- include('../../partials/js') %>